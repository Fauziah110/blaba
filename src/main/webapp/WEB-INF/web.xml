  <servlet>
    <servlet-name>ConnectionManager</servlet-name>
    <servlet-class>resort.connection.ConnectionManager</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ConnectionManager</servlet-name>
    <url-pattern>/ConnectionManager</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ReservationController</servlet-name>
    <servlet-class>resort.controller.ReservationController</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ReservationController</servlet-name>
    <url-pattern>/ReservationController</url-pattern>
</servlet-mapping>
  

</web-app>
