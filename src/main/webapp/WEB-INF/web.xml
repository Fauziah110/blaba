  <servlet>
    <servlet-name>SignupCustomerServlet</servlet-name>
    <servlet-class>resort.controller.SignupCustomerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignupCustomerServlet</servlet-name>
    <url-pattern>/SignupCustomerServlet</url-pattern>
  </servlet-mapping>

